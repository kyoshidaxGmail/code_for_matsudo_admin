<div class="container">
  <div class="card card-container">
    <!-- <img class="profile-img-card" src="//lh3.googleusercontent.com/-6V8xOA6M7BA/AAAAAAAAAAI/AAAAAAAAAAA/rzlHcD0KYwo/photo.jpg?sz=120" alt="" /> -->
    <img id="profile-img" class="profile-img-card" src="//ssl.gstatic.com/accounts/ui/avatar_2x.png" />
    <p id="profile-name" class="profile-name-card"></p>
    <%= form_tag({ :action => 'do_sign_up', :controller => "users", :id => false }, :method => :post, class: 'form-signin') do %>
      <%= text_field_tag :mail_address, params[:name], :class => 'form-control', :placeholder => 'メールアドレス' %>
      <%= text_field_tag :password, params[:name], :class => 'form-control', :placeholder => 'パスワード' %>
      <%= text_field_tag :password_confirmation, params[:name], :class => 'form-control', :placeholder => 'パスワード（確認用）' %>
      <%= submit_tag 'Sign Up', :class => "btn btn-lg btn-primary btn-block btn-signin", :id => "doSignUn", :data => { :role => 'none' } %>
    <% end %><!-- /form -->
    <%= link_to 'アカウントがすでにある', '/sign_in', :class => 'forgot-password' %>
  </div><!-- /card-container -->
</div><!-- /container -->